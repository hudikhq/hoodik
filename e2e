#!/bin/bash

set -e

export ENV_FILE=./.env.e2e

cargo test --test web_authentication -- --nocapture

cargo test --test storage -- --nocapture

cargo test --test email -- --nocapture

cargo run -- -c ./.env.e2e &

node_modules/.bin/wait-on -t 600000 -i 250 -w 250 https://127.0.0.1:5443/api/liveness && echo "API is up"

turbo run wasm-pack

(turbo test:e2e) || TEST_EXIT_CODE=$?

kill -9 $!

exit $TEST_EXIT_CODE
